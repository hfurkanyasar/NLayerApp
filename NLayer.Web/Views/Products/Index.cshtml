@model List<ProductWithCategoryDTO>

<table class="table table-striped table-responsive">
   
    <thead>
        <tr>
            <a class="btn btn-primary" asp-controller="Products" asp-action="Save">Save Product</a>
            <td>ID</td>
            <td>Name</td>
            <td>Price</td>
            <td>Stock</td>
            <td>Category</td>
            <td>CreatedDate</td>
            <td class="text-center">Actions</td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>@item.Category.Name</td>
                <td>@item.CreatedDate</td>
                <td class="text-center" style="text-align: right;">
                    <a class="btn btn-warning" asp-controller="Products" asp-action="Update" asp-route-id="@item.ID" style=" text-align: center;">Update</a>
                    <a class="btn btn-danger" asp-controller="Products" asp-action="Remove" asp-route-id="@item.ID" style="float: right; text-align: center;">Delete</a>
                </td>





            </tr>
        }
    </thead>
</table>